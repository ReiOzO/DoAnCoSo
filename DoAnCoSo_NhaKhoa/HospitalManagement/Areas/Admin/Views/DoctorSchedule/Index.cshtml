        function searchBookings() {
            // Lấy ngày được chọn
            var selectedDate = $('input[name="date"]').val();
            // Chuyển định dạng ngày tháng thành dd/MM/yyyy để so sánh
            var selectedDateFormatted = selectedDate.split('-').reverse().join('/');

            // Lặp qua từng hàng trong bảng lịch để ẩn hoặc hiển thị dựa trên ngày được chọn
            $('#tblData tbody tr').each(function () {
                // Lấy thời gian từ hàng hiện tại và chuyển đổi sang định dạng dd/MM/yyyy
                var rowDate = $(this).find('td:eq(4)').text().split(' ')[0];

                // Nếu ngày của hàng hiện tại trùng với ngày được chọn, hiển thị hàng đó, ngược lại ẩn nó đi
                if (rowDate === selectedDateFormatted) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        }

